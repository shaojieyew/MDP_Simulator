<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="675.0" prefWidth="569.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <BorderPane fx:id="mapPane" prefHeight="656.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <right>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="loadMapFileBtn" mnemonicParsing="false" onMouseClicked="#onclickLoadMapFileBtn" prefHeight="25.0" prefWidth="132.0" text="Load Map File" />
                  <Button fx:id="generateMapStatus" mnemonicParsing="false"  onMouseClicked="#onclickGenerateMapStatus" prefHeight="25.0" prefWidth="132.0" text="Generate Status" />
                  <Button fx:id="resetBtn" mnemonicParsing="false" onMouseClicked="#onclickResetSimulator" prefHeight="25.0" prefWidth="189.0" text="Reset" />
                  <Label text="Robot Coord:" />
                  <HBox>
                     <children>
                        <TextField fx:id="robotXpos" onKeyReleased="#robotPosXChanged" text="1" />
                        <TextField fx:id="robotYpos" onKeyReleased="#robotPosYChanged" text="1" />
                     </children>
                  </HBox>
                <Label text="Way Point: " />
                  <HBox>
                     <children>
                        <TextField fx:id="waypointXpos" onKeyReleased="#waypointPosChanged" text="1" />
                        <TextField fx:id="waypointYpos" onKeyReleased="#waypointPosChanged" text="1" />
                     </children>
                  </HBox>
                  <Label text="Forward (dist cm):" />
                  <HBox>
                     <children>
                        <TextField fx:id="forwardTextField" prefHeight="25.0" prefWidth="47.0" text="10" />
                        <Button mnemonicParsing="false" onAction="#onClickMoveForward" prefHeight="25.0" prefWidth="50.0" text="Move" />
                     </children>
                  </HBox>
                  <Label text="Rotate(+-degree):" />
                  <HBox>
                     <children>
                        <TextField fx:id="rotateTextField" prefHeight="25.0" prefWidth="47.0" text="90" />
                        <Button mnemonicParsing="false" onAction="#onclickRotate" text="Rotate" />
                     </children>
                  </HBox>
                  <Button fx:id="stopBtn" mnemonicParsing="false" onMouseClicked="#onclickStop" prefHeight="25.0" prefWidth="140.0" text="Stop" />
                  <Label text="milsec per Sq" />
                  <TextField fx:id="travelSpeedTextField" onKeyReleased="#onTravelSpeedChange" text="300" />
                  <Label text="milsec per Rotate" />
                  <TextField fx:id="rotateSpeedTextField" onKeyReleased="#onRotatSpeedChange" text="300" />
                  <Button fx:id="hackAllTile" mnemonicParsing="false" onAction="#onclickDiscoverAll" prefHeight="25.0" prefWidth="162.0" text="Uncover All" />
                  <Button fx:id="hideAllTile" mnemonicParsing="false" onAction="#onClickHideAll" prefHeight="25.0" prefWidth="162.0" text="Hide All" />
                  <Button fx:id="exploreBtn1" mnemonicParsing="false"  onMouseClicked="#onclickAlgo1"  prefHeight="25.0" prefWidth="162.0" text="Explore">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="startEndBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="129.0" text="FastestPath" />
               </children>
            </VBox>
         </right>
         <bottom>
            <TextArea fx:id="textArea" prefHeight="99.0" prefWidth="480.0" BorderPane.alignment="CENTER" />
         </bottom></BorderPane>
   </center>
</BorderPane>
